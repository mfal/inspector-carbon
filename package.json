{
  "name": "inspector-carbon",
  "version": "1.0.0",
  "main": "./build/lib/metrics/index.js",
  "typings": "./build/lib/metrics/index.d.ts",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://www.opensource.org/licenses/mit-license.php"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rstiller/inspector-carbon"
  },
  "keywords": [
    "metrics",
    "typescript",
    "graphite",
    "carbon"
  ],
  "engines": {
    "node": ">= 6",
    "npm": ">= 5"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/lodash": "^4.14.92",
    "@types/mocha": "^2.2.46",
    "@types/node": "^8.5.8",
    "@types/sinon": "^4.1.2",
    "@types/sinon-chai": "^2.7.29",
    "mocha": "^4.1.0",
    "mocha-typescript": "^1.1.12",
    "npm-check": "^5.5.2",
    "nyc": "^11.4.1",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.9.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "graphite": "^0.1.1",
    "inspector-metrics": "^1.8.3",
    "source-map-support": "^0.5.0"
  },
  "files": [
    "build",
    "lib",
    "test",
    "mocha.opts",
    "tsconfig.json",
    "tslint.json"
  ],
  "scripts": {
    "check:lint": "tslint -c tslint.json lib/**/*.ts test/**/*.ts",
    "check:coverage": "nyc npm run test:jenkins",
    "check:deps": "npm-check --ignore @types/* --no-spinner --no-emoji --no-color",
    "clean": "rimraf build coverage",
    "compile": "tsc -p .",
    "build": "npm run clean && npm run compile",
    "prepublishOnly": "npm run build",
    "test": "mocha --opts mocha.opts",
    "test:jenkins": "mocha --opts mocha.jenkins.opts"
  },
  "nyc": {
    "include": [
      "lib/*.ts",
      "lib/**/*.ts"
    ],
    "exclude": [
      "test/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [],
    "reporter": [
      "json",
      "html",
      "cobertura"
    ],
    "all": true
  }
}
